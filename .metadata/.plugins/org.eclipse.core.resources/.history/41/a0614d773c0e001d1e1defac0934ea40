package com.demo.dao;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.BeanPropertyRowMapper;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

import com.demo.entity.User;

@Repository
public class UserDaoImpl implements UserDao {

	@Autowired
	private JdbcTemplate jdbcTemplate;

	public int saveUser(User user) {
		int res = jdbcTemplate.update("INSERT INTO user (name,city,email,mobile) VALUES (?,?,?,?)", user.getName(),
				user.getPass(), user.getEmail(), user.getMobile());

		return res;
	}

	public User getEmpById(int id) {
		return jdbcTemplate.queryForObject("select * from user where id=?", new BeanPropertyRowMapper<User>(User.class), new Object[] { id });
	}
	
	public List<User> getSingleUser(int id) {
		return jdbcTemplate.query("select * from user where id=?", new BeanPropertyRowMapper<User>(User.class), new Object[] { id });
	}

}
